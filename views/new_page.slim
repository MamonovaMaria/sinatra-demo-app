h1 Создание страницы

.container

  form.form-horizontal action="/admin/new" enctype="multipart/form-data" method="post"

    .form-group
      label.control-label for="page_url" URL страницы *
      input.form-control placeholder=("page_url") type="text" id='page_url' name='page_url' required="required"
    .form-group
      label.control-label for="page_title" Заголовок страницы *
      input.form-control placeholder=("page_title") type="text" id='page_title' name='page_title' required="required"
    .form-group
      label.control-label for="page_description" Описание страницы
      input.form-control placeholder=("page_description") type="text" id='page_description' name='page_description'
    .form-group
      label.control-label for="page_keywords" Ключевые слова
      input.form-control placeholder=("page_keywords") type="text" id='page_keywords' name='page_keywords'
    .form-group
      label.control-label for="page_content" Содержимое страницы
      textarea.form-control rows="5" placeholder=("page_content") id="page_content" name="page_content"

    .form-group
      label.control-label for="parent_id" Родительская страница
      select.form-control id="parent_id" name="parent_id"
        option value=""
          | -- Укажите родительскую страницу --
        - @pages.each do |page|
          option value="#{page.id}" =page.page_title

    .form-group
      .checkbox
        label
          input type="checkbox" name="published" value="1" Опубликовано?

    .form-group
      input.button.btn.btn-primary type="submit" value=("СОХРАНИТЬ")

script src="https://cdn.ckeditor.com/4.6.1/standard-all/ckeditor.js"
javascript:
    CKEDITOR.replace("page_content")
